---
import Card from "./Card.astro";

export type Props = {
  id: number;
  company: string;
  logo: string;
  isNew: boolean;
  isFeatured: boolean;
  position: string;
  role: string;
  level: string;
  postedAt: string;
  contract: string;
  location: string;
  languages: string[];
  tools: string[];
};

const {
  company,
  logo,
  isNew,
  isFeatured,
  position,
  postedAt,
  contract,
  location,
  role,
  level,
  languages,
  tools,
} = Astro.props;
---

<Card>
  <figure>
    <img src={logo} alt={company} />
  </figure>

  <article>
    <h1>{company}</h1>
    {isNew && <p>NEW!</p>}
    {isFeatured && <p>FEATURED</p>}
  </article>

  <article>
    <p>{position}</p>
  </article>

  <article>
    <p>{postedAt}</p>
    <p>{contract}</p>
    <p>{location}</p>
  </article>

  <hr />

  <article>
    <p>{role}</p>
    <p>{level}</p>
    {languages.map((language) => <p>{language}</p>)}
    {tools.map((tool) => <p>{tool}</p>)}
  </article>
</Card>
